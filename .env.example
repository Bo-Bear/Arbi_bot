# Polymarket wallet private key (hex, 0x-prefixed)
POLY_PRIVATE_KEY=

# Signature type: 0=EOA (MetaMask/hardware), 1=Magic/email, 2=browser/Gnosis
POLY_SIGNATURE_TYPE=0

# Funder address (required for signature_type 1 or 2; leave blank for EOA)
POLY_FUNDER_ADDRESS=

# Execution mode: "paper" (simulated) or "live" (real orders)
EXEC_MODE=paper

# Scanning
SCAN_INTERVAL_SECONDS=30
MIN_OUTCOMES=3
MAX_OUTCOMES=20

# Arbitrage thresholds
MIN_PROFIT_PCT=2.0
MAX_PROFIT_PCT=15.0
MIN_EXECUTABLE_SIZE=5
MAX_POSITION_COST=200.0

# Execution
ORDER_TIMEOUT_S=10
LIVE_PRICE_BUFFER=0.02

# Risk management
MAX_SESSION_DRAWDOWN=100.0
MAX_TRADES_PER_SESSION=50
MAX_CONSECUTIVE_FAILURES=5

# Logging
LOG_DIR=logs

# Polymarket API endpoints
POLY_GAMMA_BASE=https://gamma-api.polymarket.com
POLY_CLOB_BASE=https://clob.polymarket.com
